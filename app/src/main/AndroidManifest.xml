<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pf.mr" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.DisplaySetListActivity"
            android:label="@string/title_activity_display_set_list"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DisplaySetListActivity" />
        </activity>
        <activity
            android:name=".activities.CardFlipActivity"
            android:label="@string/title_card_flip"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/DarkTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DisplaySetListActivity" />
        </activity>
        <activity
            android:name=".activities.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.display_set_stats.RehearsalFinishedActivity"
            android:label="@string/title_activity_rehearsal_finished"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.DisplaySetListRVActivity"
            android:label="@string/title_activity_display_set_list_rv"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.DisplaySetListNVRVActivity"
            android:label="@string/title_activity_display_set_list_nvrv"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
